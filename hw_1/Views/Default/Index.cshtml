@using hw_1.Models
@model CombinedViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>W3.CSS Template</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
    <style>
        body, h1, h5 {
            font-family: "Raleway", sans-serif
        }

        body, html {
            height: 100%
        }

        .bgimg {
            background-image: url('/web/onepage_restaurant.jpg');
            min-height: 100%;
            background-position: center;
            background-size: cover;
        }
    </style>
    <style>
        /* Menü simgesi için CSS */
        .menu-icon {
            width: 50px;
            height: 50px;
            background-image: url('/web/menu-bar.png');
            background-size: cover;
            display: inline-block;
            margin-right: 5px;
        }
    </style>
</head>
<body>

    <div class="bgimg w3-display-container w3-text-white">
        <div class="w3-display-middle w3-jumbo">
            <p><b>♡EMAYNE RESTAURANT♡</b></p>
        </div>
        <div class="w3-display-topleft w3-container w3-xlarge">
            <p><button onclick="document.getElementById('menu').style.display='block'" class="w3-button w3-white"><font size="10"><b>MENU</b></font></button></p>
            <p><button onclick="document.getElementById('contact').style.display='block'" class="w3-button w3-white"><font size="10"><b>CONTACT</b></font></button></p>
        </div>
        <div class="w3-display-bottomleft w3-container">
            <p class="w3-xlarge">monday - friday 10-23 | saturday 14-02</p>
            <p class="w3-large">42 village St, New York</p>
            <p>powered by <a href="#" target="_blank">w3.css</a></p>
        </div>
    </div>

    <!-- Menu Modal -->
    <div id="menu" class="w3-modal" style="display: none;">
        <div class="w3-modal-content w3-animate-zoom">
            <div class="w3-container w3-black w3-display-container">
                <span onclick="document.getElementById('menu').style.display='none'" class="w3-button w3-display-topright w3-large">x</span>

            </div>
            <h1><span class="menu-icon">___MENU </span></h1>
            <table border=3px solid; style="background-color: white;">
                <tr style="height:50px">
                    <th width="500px" style="font-size: 20px;"><b>Name</b></th>
                    <th width="500px" style="font-size: 20px;"><b>Price </b></th>
                    <h2>Starters</h2>
                    @foreach (var item in Model.Starter)
                    {

                        <table border=3px solid; style="background-color: lightgray;">
                            <tr style="height:50px">
                                <th width="500px" style="font-size: 20px;">@item.StarterName</th>
                                <th width="500px" style="font-size: 20px;">@item.Price</th>

                            </tr>
                        </table>

                    }


                    <div id="Main" class="tm-tab-content">
                        <h2>Main Courses </h2>

                        @foreach (var item in Model.MainCourse)
                        {
                            <table border=3px solid; style="background-color: lightgray;">
                                <tr style="height:50px">
                                    <th width="500px" style="font-size: 18px;">@item.MainName</th>
                                    <th width="500px" style="font-size: 18px;">@item.Price</th>

                                </tr>
                            </table>

                        }


                    </div>

                    <div id="Dessert" class="tm-tab-content">
                        <h2>Desserts</h2>

                        @foreach (var item in Model.Dessert)
                        {
                            <table border=3px solid; style="background-color: lightgray;">
                                <tr style="height:50px">
                                    <th width="500px" style="font-size: 20px;">@item.DessertName</th>
                                    <th width="500px" style="font-size: 20px;">@item.Price</th>

                                </tr>
                            </table>

                        }
                </tr>
            </table>

        </div>
    </div>
    </div>

    <!-- Contact Modal -->
    <div id="contact" class="w3-modal" style="display: none;">
        <div class="w3-modal-content w3-animate-zoom">
            <div class="w3-container w3-black">
                <span onclick="document.getElementById('contact').style.display='none'" class="w3-button w3-display-topright w3-large">x</span>
                <h1>Contact</h1>
            </div>
            <div class="w3-container">
                <p>Reserve a table, ask for today's special or just send us a message:</p>
                <form action="/action_page.php" target="_blank">
                    <p><input class="w3-input w3-padding-16 w3-border" type="text" placeholder="Name" required="" name="Name"></p>
                    <p><input class="w3-input w3-padding-16 w3-border" type="number" placeholder="How many people" required="" name="People"></p>
                    <p><input class="w3-input w3-padding-16 w3-border" type="datetime-local" placeholder="Date and time" required="" name="date" value="2020-11-16T20:00"></p>
                    <p><input class="w3-input w3-padding-16 w3-border" type="text" placeholder="Message \ Special requirements" required="" name="Message"></p>
                    <p><button class="w3-button" type="submit">SEND MESSAGE</button></p>
                </form>
            </div>
        </div>
    </div>




</body>
</html>
